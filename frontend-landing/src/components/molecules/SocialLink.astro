---
import Icon from "../atoms/Icon.astro";

interface Props {
  href: string;
  platform: "github" | "twitter" | "discord";
  label: string;
  class?: string;
}

const { href, platform, label, class: className = "" } = Astro.props;
---

<a href={href} class={`text-black hover:text-primary ${className}`}>
  <span class="sr-only">{label}</span>
  <Icon name={platform} />
</a>
